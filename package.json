{
  "name": "@9renpoto/bot",
  "private": true,
  "repository": "ssh://git@github.com:9renpoto/bot.git",
  "author": "github.com/9renpoto",
  "engines": {
    "npm": "^8.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:prettier": "prettier --check './{packages,example}/**/*.{js,jsx,ts,tsx}'",
    "test": "jest"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "7.5.0",
    "@9renpoto/tsconfig": "^7.5.0",
    "@swc/core": "^1.2.124",
    "@swc/jest": "^0.2.15",
    "@types/faker": "5.5.9",
    "@types/jest": "27.4.0",
    "eslint": "8.6.0",
    "faker": "5.5.3",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "lint-staged": "12.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-package": "1.3.0",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "3.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --cache"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
